{
  "manifest_version": 3,
  "name": "protONsteam",
  "version": "1.0.0",
  "description": "Shows ProtonDB compatibility ratings (Native, Platinum, Gold, Silver, Bronze, Borked) on Steam game pages.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [],
  "host_permissions": [
    "https://store.steampowered.com/*",
    "https://www.protondb.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://store.steampowered.com/app/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "protONsteam@extension",
      "strict_min_version": "109.0"
    }
  },
  "data_collection_permissions": {
    "collect_technical_and_interaction_data": false,
    "collect_financial_and_payment_data": false,
    "collect_location_data": false,
    "collect_health_data": false,
    "collect_personal_communications": false,
    "collect_personal_information": false,
    "collect_browsing_data": false,
    "share_data_with_third_parties": false,
    "use_data_for_marketing": false,
    "use_data_for_profiling": false
  }
}
